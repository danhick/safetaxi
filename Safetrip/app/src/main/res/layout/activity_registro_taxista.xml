<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#009688"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Registro_usuario">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_paaji"
        android:text="Registrate como usuario" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imbtaxista"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/etnombrechofer"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Nombre"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/etapellidochofer"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Apellido"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/etcorrechofer"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Correo"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/ettelefonochofer"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Telefono"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/ettaxi"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Numero Taxi"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/etplaca"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Placa"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/etmarca"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Marca"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/etmodelo"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Modelo"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/etciudad"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Ciudad"
                                android:inputType="textPersonName" />

                            <EditText
                                android:id="@+id/etcontrataxi"
                                android:layout_width="203dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="7dp"
                                android:ems="10"
                                android:fontFamily="@font/baloo_paaji"
                                android:hint="Contrase"
                                android:inputType="textPassword" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btguardartaxi"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:background="#1976d2"
                    android:text="Guardar"
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btcancelartaxi"
                    android:layout_width="198dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="7dp"
                    android:background="#1976d2"
                    android:text="Cancelar"
                    android:textColor="#FFF"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>