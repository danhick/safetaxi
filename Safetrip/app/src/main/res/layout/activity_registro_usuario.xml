<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#009688"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Registro_usuario">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_paaji"
        android:text="Registrate como usuario" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etnombreusario"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:fontFamily="@font/baloo_paaji"
                        android:hint="Nombre"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etapellidousuario"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="7dp"
                        android:ems="10"
                        android:fontFamily="@font/baloo_paaji"
                        android:hint="Apellido"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etcorreousario"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:fontFamily="@font/baloo_paaji"
                        android:hint="Correo"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etedadousari"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:fontFamily="@font/baloo_paaji"
                        android:hint="Edad"
                        android:inputType="textPersonName" />


                    <EditText
                        android:id="@+id/etcontrausuario"
                        android:layout_width="203dp"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:fontFamily="@font/baloo_paaji"
                        android:hint="Conttrase"
                        android:inputType="textPassword" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="477dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btguarusuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="#1976d2"
                    android:fontFamily="@font/baloo_paaji"
                    android:text="Guardar"
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btcanusuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="#1976d2"
                    android:fontFamily="@font/baloo_paaji"
                    android:text="Cancelar"
                    android:textColor="#FFF"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/btcamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="#1976d2"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    app:srcCompat="@android:drawable/ic_menu_camera" />

                <ImageButton
                    android:id="@+id/btsubir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:background="#1976d2"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>